#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

export DH_COMPAT=2

pwd:=$(shell pwd)
cfg:=--prefix=/usr --mandir=/usr/share/man

build: build-stamp
build-stamp:
	dh_testdir

	./configure $(cfg)
	$(MAKE)
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	-$(MAKE) distclean

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	$(MAKE) install DESTDIR=$(pwd)/debian/libvanessa-logger

	./mkinstalldirs \
	  $(pwd)/debian/libvanessa-logger/usr/share/doc/libvanessa-logger-dev/ 
	install -c -m 644 ChangeLog \
	  $(pwd)/debian/libvanessa-logger/usr/share/doc/libvanessa-logger-dev/changelog
	  gzip $(pwd)/debian/libvanessa-logger/usr/share/doc/libvanessa-logger-dev/changelog
	install -c -m 644 README \
	  $(pwd)/debian/libvanessa-logger/usr/share/doc/libvanessa-logger-dev/ 
	./mkinstalldirs \
	  $(pwd)/debian/libvanessa-logger/usr/share/doc/libvanessa-logger-sample/ 
	install -c -m 644 sample/vanessa_logger_sample.c \
	  $(pwd)/debian/libvanessa-logger/usr/share/doc/libvanessa-logger-sample/ 
	install -c -m 644 sample/vanessa_logger_sample_config.h \
	  $(pwd)/debian/libvanessa-logger/usr/share/doc/libvanessa-logger-sample/ 

	dh_movefiles --source=debian/libvanessa-logger

binary-indep: build install

binary-arch: build install
	dh_testversion 2.0
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_suidregister
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
